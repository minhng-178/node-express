<!DOCTYPE html>
<html>
  <head>
    <title>Đăng nhập</title>
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }

      .b-example-divider {
        width: 100%;
        height: 3rem;
        background-color: rgba(0, 0, 0, 0.1);
        border: solid rgba(0, 0, 0, 0.15);
        border-width: 1px 0;
        box-shadow: inset 0 0.5em 1.5em rgba(0, 0, 0, 0.1),
          inset 0 0.125em 0.5em rgba(0, 0, 0, 0.15);
      }

      .b-example-vr {
        flex-shrink: 0;
        width: 1.5rem;
        height: 100vh;
      }

      .bi {
        vertical-align: -0.125em;
        fill: currentColor;
      }

      .nav-scroller {
        position: relative;
        z-index: 2;
        height: 2.75rem;
        overflow-y: hidden;
      }

      .nav-scroller .nav {
        display: flex;
        flex-wrap: nowrap;
        padding-bottom: 1rem;
        margin-top: -1px;
        overflow-x: auto;
        text-align: center;
        white-space: nowrap;
        -webkit-overflow-scrolling: touch;
      }

      .btn-bd-primary {
        --bd-violet-bg: #712cf9;
        --bd-violet-rgb: 112.520718, 44.062154, 249.437846;

        --bs-btn-font-weight: 600;
        --bs-btn-color: var(--bs-white);
        --bs-btn-bg: var(--bd-violet-bg);
        --bs-btn-border-color: var(--bd-violet-bg);
        --bs-btn-hover-color: var(--bs-white);
        --bs-btn-hover-bg: #6528e0;
        --bs-btn-hover-border-color: #6528e0;
        --bs-btn-focus-shadow-rgb: var(--bd-violet-rgb);
        --bs-btn-active-color: var(--bs-btn-hover-color);
        --bs-btn-active-bg: #5a23c8;
        --bs-btn-active-border-color: #5a23c8;
      }

      .bd-mode-toggle {
        z-index: 1500;
      }

      .bd-mode-toggle .dropdown-menu .active .bi {
        display: block !important;
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-25 m-auto">
      <form method="get" class="mt-5">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            id="uname"
            placeholder="username"
            required
            onblur="checkUsername()"
          />
          <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
          <input
            type="password"
            class="form-control"
            id="psw"
            placeholder="Password"
            required
            disabled
            onblur="checkPassword()"
          />
          <label for="floatingPassword">Password</label>
        </div>

        <!-- <div class="form-check text-start my-3">
          <input
            class="form-check-input"
            type="checkbox"
            value="remember-me"
            id="flexCheckDefault"
          />
          <label class="form-check-label" for="flexCheckDefault">
            Remember me
          </label>
        </div> -->
        <div class="text-center w-full my-3">
          <button
            class="btn btn-bd-primary w-100 py-2"
            type="submit"
            id="loginBtn"
            disabled
            onclick="checkLogin()"
          >
            Sign in
          </button>
        </div>
        <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
      </form>
    </main>
    <script>
      // Default account
      const defaultAccount = {
        username: "admin",
        password: "123456",
      };

      function checkUsername() {
        const unameField = document.getElementById("uname");
        const uname = unameField.value;
        if (uname === defaultAccount.username) {
          document.getElementById("psw").disabled = false;
          document.getElementById("loginBtn").disabled = false;
        } else {
          alert("Wrong username!");
          document.getElementById("psw").disabled = true;
          document.getElementById("loginBtn").disabled = true;
          setTimeout(function () {
            unameField.select(); // This will highlight the text in the input field
            unameField.focus(); // This will set the focus back to the input field
          }, 0.5);
        }
      }

      function checkPassword() {
        const pswField = document.getElementById("psw");
        const psw = pswField.value;
        if (psw === defaultAccount.Password) {
          document.getElementById("loginBtn").disabled = false;
        } else {
          alert("Wrong Password!");
          document.getElementById("loginBtn").disabled = true;
          setTimeout(function () {
            pswField.select(); // This will highlight the text in the input field
            pswField.focus(); // This will set the focus back to the input field
          }, 0.5);
        }
      }

      // Function to check login
      function checkLogin(event) {
        event.preventDefault();
        const uname = document.getElementById("uname").value;
        const psw = document.getElementById("psw").value;
        if (
          uname === defaultAccount.username &&
          psw === defaultAccount.password
        ) {
          alert("Login successful!");
          window.location.href = "/welcome"; // Redirect to welcome page
        } else {
          if (uname !== defaultAccount.username) {
            alert("Wrong username!");
          } else if (psw !== defaultAccount.password) {
            alert("Wrong password!");
          }
        }
      }

      // Add event listener to login button
      document.getElementById("loginBtn").addEventListener("click", checkLogin);
    </script>
  </body>
</html>
