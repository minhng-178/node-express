<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head')-%>
  <body>
    <main>
      <%- include('../partials/nav')-%>
      <div class="container" id="container">
        <div class="row">
          <div class="col-md-8">
            <div class="pro-img-details">
              <img
                width="100%"
                height="380"
                class="object-fit-contain border rounded"
                src="<%= orchid.image %>"
                alt="<%= orchid.name %>"
              />
            </div>
          </div>
          <div class="col-md-4">
            <div>
              <h1><%= orchid.name %></h1>
              <small class="text-body-secondary">
                <% for(let i = 0; i < 5; i++) { %> <% if(i < averageRating) { %>
                <i class="fa-solid fa-star checked"></i>
                <% } else { %>
                <i class="fa-solid fa-star"></i>
                <% } %> <% } %>
                <span>(<%= totalComments %>) Votes</span>
              </small>
            </div>

            <div class="product_meta">
              <span class="posted_in">
                <strong>Category:</strong>
                <a rel="tag" href="#"><%= orchid.category.name %></a>,
              </span>
              <span class="colored_as"
                ><strong>Color:</strong>
                <a rel="tag" href="#"><%= orchid.color %></a>,
              </span>
              <span class="tagged_as"
                ><strong>Color:</strong>
                <a rel="tag" href="#"><%= orchid.original %></a>,
              </span>
            </div>
            <div class="m-bot15">
              <strong>Price : </strong>
              <span class="pro-price">$<%= orchid.price %></span>
            </div>
          </div>
        </div>
        <div class="col-lg-12 mt-5" id="reviews">
          <%- include('../pages/commentOrchid')-%> <%-
          include('../pages/ratingOrchid')-%>
        </div>
      </div>
      <%- include('../partials/footer')-%>
    </main>

    <%-include('../scripts/globalScript')-%>
    <%-include('../scripts/commentScript')-%>
  </body>
</html>
